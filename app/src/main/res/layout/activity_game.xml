<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameActivity">


    <ImageView
            android:id="@+id/imageView"
            android:layout_width="251dp"
            android:layout_height="297dp" android:layout_marginEnd="65dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="65dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintVertical_bias="0.48000002" android:layout_marginTop="24dp"/>


    <Button
            android:text="Enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enterButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="48dp"
            app:layout_constraintStart_toEndOf="@+id/letterText" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/letterText"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/guessText"
            android:layout_marginStart="32dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/enterButton" android:layout_marginEnd="30dp"
            android:hint="Enter a Letter"/>
    <TextView
            android:text="GameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guessText"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textSize="18sp" app:layout_constraintTop_toBottomOf="@+id/imageView" android:textStyle="bold"/>
    <Button
            android:text="Quit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/quitButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.501" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/submitHistory"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submitHistory" android:textSize="18sp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="58dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/enterButton"
    />


</androidx.constraintlayout.widget.ConstraintLayout>