<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:text="The Answer Was:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView2" android:textSize="18sp"/>
    <TextView
            android:text="Answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/gameover" android:textSize="24sp"
            android:textAlignment="center" android:textStyle="bold" android:textColor="@color/colorAccent"/>
    <Button
            android:text="Play Again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/continueButton"/>

    <Button
            android:text="quit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/quitButtons"/>


</LinearLayout>